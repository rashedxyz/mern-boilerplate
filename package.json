{
  "name": "mern-boilerplate",
  "version": "1.0.0",
  "description": "Starter kit for creating MERN apps",
  "main": "server.js",
  "scripts": {
    "client-install": "cd client && npm install",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "author": "Rashed Mahmud",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "nodemon": "^2.0.20"
  },
  "dependencies": {
    "concurrently": "^7.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^6.6.5"
  }
}
